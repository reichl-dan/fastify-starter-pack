{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true
  },
  "paths": {
    "types/*": ["./types/*"]
  },
  "include": ["lib/**/*", "test/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
